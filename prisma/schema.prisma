// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Reads from your .env.local file
}

model Video {
  id           String   @id @default(cuid())
  publicId     String   @unique
  thumbnailUrl String
  duration     Float?
  createdAt    DateTime @default(now())
}